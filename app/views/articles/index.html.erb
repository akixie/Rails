<h1>Listing Articles</h1>
<%= link_to 'New article', new_article_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>
 
<% @articles.each do |article| %>
  <tr>
    <td height="44" width="200"><%= article.title %></td>
    <td height="44" width="300"><%= article.text %></td>
    <td width="50"  ><%= link_to 'Show', article_path(article) %></td>
    <td width="50" ><%= link_to 'Edit', edit_article_path(article) %></td>
    <td width="50" ><%= link_to 'Destroy', article_path(article),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>